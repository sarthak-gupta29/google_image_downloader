{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "templates/index.html",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/submit",
      "methods": ["POST"],
      "dest": "/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
